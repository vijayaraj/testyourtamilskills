<div class="title-section">
  <div class="breadcrumb">
    <%= link_to(@question_set.name, question_set_path(@question_set.id)) %>
  </div>
  <div class="lead pull-left"><%= @question_set.name %></div>
</div>

<div class="content-section">
  
  <div class="form-group">
    <label class="col-sm-2" for="name"><%= t("question") %></label>
    <div class="col-sm-4"><%= @question.question %></div>
  </div><br>

  <div class="form-group">
    <label class="col-sm-2" for="name"><%= t("answer") %></label>
    <div class="col-sm-4"><%= @question.answer %></div>
  </div><br>

  <div class="form-group">
    <label class="col-sm-2" for="name"><%= t("questions.new.choices") %></label>
    <div class="col-sm-4"><%= @question.choices %></div>
  </div><br>
  
</div>
