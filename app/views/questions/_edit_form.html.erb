  <%= form_for(@question, :url => question_set_question_path(@question.question_set.id, @question.id), :html => { :method => "put", :class => "form-horizontal", "role" => "form" }) do |form| %>

    <div class="form-group">
      <label for="name"><%= t("question") %></label>
      <br>   
      <div class="col-lg-12">
        <%= form.text_area :question, :placeholder => t("questions.new.one_or_two_lines"), :required => true, :class => "form-control", :size => "25" %>
      </div>
    </div>

    <div class="form-group">
      <label for="name"><%= t("questions.new.choices") %></label>
      <br>
      <div class="col-lg-1">
        <%= radio_button_tag("choices[]", 1, true, disabled: true) %>
      </div>
      <div class="col-lg-5">
        <%= form.text_field :answer, :placeholder => t("answer"), :required => true, :class => "form-control" %>
      </div>
      
    </div>
    
    <div class="form-group">
      <div class="col-lg-1">
        <%= radio_button_tag("choices[]", 2, false, disabled: true) %>
      </div>
      <div class="col-lg-5">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 1", :required => true, :class => "form-control", :name => "question[choices][]", :value => @question.choices[0] %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-1">
        <%= radio_button_tag("choices[]", 3, false, disabled: true) %>
      </div>
      <div class="col-lg-5">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 2", :required => true, :class => "form-control", :name => "question[choices][]", :value => @question.choices[1] %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-1">
        <%= radio_button_tag("choices[]", 4, false, disabled: true) %>
      </div>
      <div class="col-lg-5">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 3", :required => true, :class => "form-control", :name => "question[choices][]", :value => @question.choices[2] %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-1">
        <%= radio_button_tag("choices[]", 5, false, disabled: true) %>
      </div>
      <div class="col-lg-5">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 4", :class => "form-control", :name => "question[choices][]", :value => @question.choices[3] %>
      </div>
    </div><br>
    
    <div class="form-group">
      <%= form.submit t("actions.edit"), :class => "btn btn-primary pull-right" %>
    </div>

  <% end %>