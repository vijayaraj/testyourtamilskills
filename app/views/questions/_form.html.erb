  <%= form_for(@question, :url => question_set_questions_path, :html => { :class => "form-horizontal", "role" => "form" }) do |form| %>

    <div class="form-group">
      <label for="name"><%= t("question") %></label>
      <br>   
      <div class="col-lg-12">
        <%= form.text_area :question, :placeholder => t("questions.new.one_or_two_lines"), :required => true, :class => "form-control", :size => "25" %>
        <br>
      </div>
    </div>

    <div class="form-group">
      <label for="name"><%= t("questions.new.choices") %></label>
      <br>
      <div class="col-lg-4">
        <%= form.text_field :answer, :placeholder => t("answer"), :required => true, :class => "form-control" %>
        <br>
      </div>
      <div class="col-lg-4">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 1", :required => true, :class => "form-control", :name => "question[choices][]" %>
        <br>
      </div>
      <div class="col-lg-4">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 2", :required => true, :class => "form-control", :name => "question[choices][]" %>
        <br>
      </div>
      <div class="col-lg-4">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 3", :required => true, :class => "form-control", :name => "question[choices][]" %>
        <br>
      </div>
      <div class="col-lg-4">
        <%= form.text_field :choices, :placeholder => "#{t("questions.new.choice")} 4", :class => "form-control", :name => "question[choices][]" %>
        <br>
      </div>
    </div>
    
    <div class="form-group">
      <%= form.submit t("actions.create"), :class => "btn btn-primary pull-right" %>
    </div>

  <% end %>