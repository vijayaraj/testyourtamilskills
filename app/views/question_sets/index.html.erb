<div class="details">

  <div class="title-section">
    <div class="lead">
      Name
    </div>

  </div>

  <% if @question_sets %>

    <div class="content-section col-centered">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>நிலை</th>
            <th>கேள்வி தொகுப்புகள்</th>
            <th>முயற்சிகள்</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @question_sets.each do |question_set| %>
            <tr>
              <td><%= link_to question_set.name, question_set_path(question_set.id) %></td>
              <td><%= question_set.category.name %></td>
              <td><%= question_set.level.name %></td>
              <td><%= link_to "Add", new_question_set_question_path(question_set.id) %></td>
              <td><%= link_to "View", question_set_questions_path(question_set.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    log in
  <% end %>

</div>
