<div class="details">

  <div class="title-section">
    <div class="lead pull-left"><%= t('question_sets.index.title') %></div>
    <%= link_to %( #{t("question_set")}), new_question_set_path, :class => "fa fa-plus btn btn-primary pull-right" %>
  </div>

  <% if @question_sets %>
    <div class="content-section col-centered">
      <table class="table table-striped table-hover">
        <thead><tr></tr></thead>
        <tbody>
          <% @question_sets.each do |question_set| %>
            <tr>
              <td><%= link_to question_set.name, question_set_path(question_set.id) %></td>
              <td><%= link_to %(), new_question_set_question_path(question_set.id), :class => "fa fa-plus _tooltip", "data-original-title" => t("question") %> </td>
              <td><%= link_to t('actions.view'), question_set_questions_path(question_set.id) %></td>
              <td><%= question_set.category.name %></td>
              <td><%= question_set.level.name %></td>
            </tr>
          <% end %>
          
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <%= will_paginate @question_sets, :renderer => BootstrapPagination::Rails, 
                                :previous_label => "<b class='arrow-left'><</b>",
                                :next_label => "<b class='arrow-right'>></b>",
                                :class => "pagination " %>
    </div>
  <% else %>
    log in
  <% end %>

</div>
