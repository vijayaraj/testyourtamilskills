<div class="title-section">
  <div class="lead">கேள்வி தொகுப்பு</div>
</div>

<div class="content-section">
  
  <%= form_for(@question_set , :html => { :class => "form-horizontal", "role" => "form" }) do |form| %>
    <div class="form-group">
      <label class="col-sm-2" for="name">பெயர்</label>
      <div class="col-sm-4">
        <%= form.text_field :name, :placeholder => "Name", :required => true, :class => "form-control", :size => "25" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2" for="category_id">பிரிவு</label>
      <div class="col-sm-4">
        <%= form.select :category_id, options_for_select(category_list), :required => true, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2" for="level_id">நிலை</label>
      <div class="col-sm-4">
        <%= form.select :level_id, options_for_select(level_list), :required => true, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit "செய்", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  
</div>
